{
  "name": "edge-server",
  "description": "Edge Server is a centralized Express-based HTTP server with sophisticated built-in security.",
  "version": "0.0.1",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "main": "lib/node.commonjs.js",
  "module": "lib/node.esmodules.js",
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint"
  },
  "license": "Apache-2.0",
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf bin && rimraf lib && prepublish",
    "test": "npm run build && jest",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-server.git"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "body-parser": "^1.17.2",
    "chalk": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cosmiconfig": "^2.2.2",
    "cross-env": "^5.0.3",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-locale": "^1.0.2",
    "helmet": "^3.8.1",
    "hpp": "^0.2.2",
    "jsome": "^2.3.26",
    "meow": "^3.7.0",
    "prepublish": "^1.2.7",
    "pretty-error": "^2.1.1",
    "readable-code": "^3.4.9",
    "shrink-ray": "^0.1.3",
    "source-map-support": "^0.4.15",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "jest-cli": "^20.0.4"
  }
}
